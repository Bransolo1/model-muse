# ============================================================================
# Sensehub AutoM/L — Environment Variables
# Copy to .env and fill in values. Never commit .env to version control.
# ============================================================================

# ---- Security ----
# Maximum upload file size in MB (default: 100)
SENSEHUB_MAX_UPLOAD_MB=100

# Maximum dataset rows (default: 5000000)
SENSEHUB_MAX_ROWS=5000000

# Maximum dataset columns (default: 2000)
SENSEHUB_MAX_COLUMNS=2000

# Allow RDS file uploads (default: FALSE — RDS can execute arbitrary code)
SENSEHUB_ALLOW_RDS=FALSE

# Rate limit between expensive operations in seconds (default: 15)
SENSEHUB_RATE_LIMIT_SECS=15

# ---- Performance ----
# Maximum parallel workers for future (default: 2)
SENSEHUB_MAX_WORKERS=2

# SHAP background sample size (default: 20)
SENSEHUB_SHAP_BG_SIZE=20

# PDP sample size (default: 500)
SENSEHUB_PDP_SAMPLE_SIZE=500

# ---- Reproducibility ----
# Global random seed (default: 42)
SENSEHUB_SEED=42

# ---- Deployment ----
# Log level: info, warn, error, debug (default: info)
SENSEHUB_LOG_LEVEL=info

# Set to TRUE if behind a reverse proxy (default: FALSE)
SENSEHUB_BEHIND_PROXY=FALSE
